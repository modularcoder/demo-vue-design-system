{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": [
      "vite/client",
      "vue/macros",
      "vitest/globals",
      "@floating-ui/core",
      "@floating-ui/dom",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.spec.ts"
  ],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.mdx"
  ]
}
